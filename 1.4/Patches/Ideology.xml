<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ideology</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_MakeshiftLMG"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedHeavy</li>
            </weaponClasses>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_MakeshiftPistol"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedLight</li>
            </weaponClasses>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_MakeshiftSMG"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedLight</li>
              <li>ShortShots</li>
            </weaponClasses>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_MakeshiftShotgun"]</xpath>
          <value>
            <weaponClasses>
              <li>ShortShots</li>
            </weaponClasses>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>